extends ../../layout.pug

block contenido
	div(class="col-md-6 remove-float center-block biggest-top-space")
		h1 Editar imagen
		form(action="/app/imagenes/"+image._id+"/?_method=PUT", method="POST")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text", name="title", value=image.title, id="title", class="form-control")
						
			div(class="row form-group top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit", value="Actualizar", class="btn btn-success")
