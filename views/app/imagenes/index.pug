extends ../../layout.pug

block contenido
	div(class="container")
		h1 Mis im√°genes
		for imagen in images
			div(class="white border tr large-padding")
				div(class="row")
					div(class="col-md-10")
						h1 #{imagen.title}
					div(class="col-md-2")
						- var id = imagen._id
						a(href="/app/imagenes/"+id+"/edit" class="right-space") Editar
						form(action="/app/imagenes/"+id+"/?_method=DELETE" method="POST" class="link")
							input(type="submit" value="Eliminar")