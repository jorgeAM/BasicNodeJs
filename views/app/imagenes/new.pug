extends ../../layout.pug

block contenido
	div(class="col-md-6 remove-float center-block biggest-top-space")
		h1 Subir nueva imagen
		form(action="/app/imagenes", method="POST", encType="multipart/form-data")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text", name="title", placeholder="Titulo", id="title", class="form-control")
			
			div(class="form-group")
				label(for="img") Imagen
				input(type="file", name="img", id="img")
			
			div(class="row form-group top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit", value="Subir", class="btn btn-success")
