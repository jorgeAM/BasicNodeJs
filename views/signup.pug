extends layout.pug

block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Registrate
		form(action="/users", method="POST")
			div(class="form-group")
				label(for="username") Username
				input(type="text", name="username", placeholder="Uername", id="username", class="form-control")

			div(class="form-group")
				label(for="email") Email
				input(type="email", name="email", placeholder="Email", id="email", class="form-control")
			
			div(class="form-group")
				label(for="password") Password
				input(type="password", name="password", placeholder="introduzca password", id="password", class="form-control")

			div(class="form-group")
				label(for="password_confirmation") password confirmation
				input(type="password", name="password_confirmation", placeholder="confirme password", id="password_confirmation", class="form-control")
			
			div(class="row form-group top-space")
				div(class="col-xs-12 col-md-6")
					input(type="submit", value="Ingresar", class="btn btn-success")
				div(class="col-xs-12 col-md-6 text-right")
					a(href="/login") Ya tengo cuenta
		